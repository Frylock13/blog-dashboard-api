%p#notice= notice
%p
  %b Url:
  = @post.slug
  = link_to "Generate url", dashboard_post_generate_url_path(post_id: @post.id), class: "btn btn-success"
  = link_to "Reset the publication date", dashboard_post_reset_publication_date_path(post_id: @post.id), class: "btn btn-success"
= image_tag @post.image(:medium)
%p
  %b Title:
  = @post.title
%p
  %b Short:
  = @post.short
%p
  %b Content:
  = raw(@post.content)
%p
  %b Tags:
  = @post.tags.join(",")

= link_to 'Edit', edit_dashboard_post_path(@post), class: "btn btn-warning"
= link_to 'Back', dashboard_posts_path, class: "btn btn-default"
