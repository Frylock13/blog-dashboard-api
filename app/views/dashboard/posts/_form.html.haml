= form_for @dashboard_post do |f|
  - if @dashboard_post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dashboard_post.errors.count, "error")} prohibited this dashboard_post from being saved:"
      %ul
        - @dashboard_post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :short
    = f.text_field :short
  .field
    = f.label :desc
    = f.text_area :desc
  .field
    = f.label :topic
    = f.text_field :topic
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
